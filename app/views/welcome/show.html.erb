
 <h1>Your Search Results</h1>
<div id="tracks">
<table>
  <%@tracks.each do |track| %>
    <tr>
    <td><h3><%= track.title %></h3><iframe width="100%" height="200" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?visual=true&amp;url=<%= track.uri %>&amp;show_artwork=true&amp;client_id=<%ENV['SOUNDCLOUD_CLIENT_ID']%>"></iframe>
    <%= link_to("Add to favorites", fav_path(track.id), method: :post,  :class => 'btn btn-large btn-primary') %>
    </td>
    </tr>
  <% end %>
</table>
</div>

<ul class="pagination">
  <li><%=link_to "1", params.merge(:page => 1)%></li>
  <li><%=link_to "2", params.merge(:page => 2)%></li>
  <li><%=link_to "3", params.merge(:page => 3)%></li>
  <li><%=link_to "4", params.merge(:page => 4)%></li>
  <li><%=link_to "5", params.merge(:page => 5)%></li>
  <li><%=link_to "6", params.merge(:page => 6)%></li>
  <li><%=link_to "7", params.merge(:page => 7)%></li>
  <li><%= link_to 'Back to Search', search_path %></li>
</ul>
